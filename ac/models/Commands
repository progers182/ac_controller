<?php
class Commands {
    private $conn;
    private $table = 'commands';

    public $timestamp;
    public $command;
    public $device_id;

    public function __construct(PDO $db) {
        $this->conn = $db;
    }

    public function read() {
        $query = 'SELECT * FROM ' . $this->table;

        $stmt = $this->conn->prepare($query);

        $stmt->execute();

        return $stmt;
    }
}
